<div class="new-user-body">
  <h2>Sign up</h2>

  <%= form_for(@new_user, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <div class="errors <%= @errors ? '' : 'hidden' %>">
      <p>There are errors preventing this account from being saved:<p>
      <ul>
        <% @new_user.errors.full_messages.each do |e| %>
          <li><%= e %></li>
        <% end %>
        <% @new_account.errors.full_messages.each do |e| %>
          <li><%= e %></li>
        <% end %>
      </ul>
    </div>

    <%= f.fields_for @new_account do |a| %>
      <div class="left">
        <%= render :partial => "account", :locals => {:a => a} %>
      </div>
    <% end %>
    
    <div class="right">
      <div><%= f.label :username %><br />
        <%= f.text_field :username, :required=>true %>
      </div> 
      
      <div><%= f.label :role_id %><br />
        <%= f.select :role_id, options_for_select([['Admin', 1], ['Customer', 2], ['Therapist', 3]]) %>      
      </div> 
       
      <div><%= f.label :email %><br />
        <%= f.email_field :email, :required=>true  %>
      </div> 

      <div><%= f.label :password, :required=>true  %><br />
        <%= f.password_field :password %>
      </div>

      <div><%= f.label :password_confirmation, :required=>true  %><br />
        <%= f.password_field :password_confirmation %>
      </div>

      <div><%= f.submit "Sign up" %></div>
    </div>
  <% end %>
</div>
