<div class="new-user user-body">
  <h2>Sign up</h2>

  <%= form_for(@new_user, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <div class="errors <%= @errors ? '' : 'hidden' %>">
      <p>There are errors preventing this account from being saved:<p>
      <ul>
        <% @new_user.errors.full_messages.each do |e| %>
          <li><%= e %></li>
        <% end %>
        <% @new_account.errors.full_messages.each do |e| %>
          <li><%= e %></li>
        <% end %>
      </ul>
    </div>

    <%= f.fields_for @new_account do |a| %>
      <div class="left">
        <div><%= a.label :firstname, :class=>"bold" %><br />
          <%= a.text_field :firstname, :required=>true%>
        </div>

        <div><%= a.label :lastname, :class=>"bold" %><br />
          <%= a.text_field :lastname, :required=>true  %>
        </div>

        <div><%= a.label :role_id, :class=>"bold" %><br />
          <%= a.select :role_id, options_for_select([['Customer', 2], ['Therapist', 3]]), :required=>true %>      
        </div> 
      </div>
    <% end %>
    
    <div class="right">
      <div><%= f.label :username, :class=>"bold" %><br />
        <%= f.text_field :username, :required=>true %>
      </div> 
      
      <div><%= f.label :email, :class=>"bold" %><br />
        <%= f.email_field :email, :required=>true  %>
      </div> 

      <div><%= f.label :password, :class=>"bold" %><br />
        <%= f.password_field :password, :required=>true %>
      </div>

      <div><%= f.label :password_confirmation, :class=>"bold" %><br />
        <%= f.password_field :password_confirmation, :required=>true %>
      </div>

      <div><%= f.submit "Sign up" %></div>
    </div>

    <div class="container-clearer"></div>
  <% end %>
</div>

