<!DOCTYPE html>
<html>
<head>
  <title>BHS-Binan Laguna</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    params[:controller] %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render :template => 'layouts/_header' %>
  <div class="load-indicator"><span>Loading...</span></div>
  <div class="container body">
    <div class="row">
        <div class="span3">
        <%= render :template => 'layouts/_sidebar' %>
      </div>
      <div class="span9">
        <%= yield %>
      </div>
    </div>
  </div>
  <!-- Place all JS at the end of the document (for faster loading) -->
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag params[:controller] %>
</body>
</html>
<%= yield :pages_assets %>
