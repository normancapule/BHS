  <%= f.label :card_number, :class=>"bold" %>
  <%= text_field_tag :card_number %>
</div>

<div>
  <%= f.label :nickname %><br />
  <%= f.text_field :nickname %>
</div>

<div>
  <%= f.label :cellphone %><br />
  <%= f.text_field :cellphone %>
</div>

<div>
  <%= f.label :address %><br />
  <%= f.text_area :address, :rows => 5, :cols => 25 %>
</div>

<div>
  <%= f.label :birthday %><br />
  <%= f.text_field :birthday %>
</div>
