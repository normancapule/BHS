<div>
  <%= f.label :firstname, :class=>"bold" %><br />
  <%= f.text_field :firstname, :required=>true%>
</div>

<div>
  <%= f.label :lastname, :class=>"bold" %><br />
  <%= f.text_field :lastname, :required=>true  %>
</div>

<div>
  <%= f.label :membership, :class=>"bold" %><br />
  <%= f.select :membership, options_for_select([['NA', 0]]+Membership.types.map {|key, val| [val, key.to_i]}, :selected => 0) %>
</div> 

