<div class="modal-body">
  <div id="step-headers">
    <span class="step1 btn disabled">Step 1: Select the Customer</span>
    <span class="divider"></span>
    <span class="step2 btn disabled">Step 2: Select the Services</span>
    <span class="divider"></span>
    <span class="step3 btn btn-inverse">Step 3: Select the Therapist</span>
  </div>
  
  <div class="therapist-select">
    <table>
      <tr>
        <td>Therapist: </td>
        <td><%= select_tag :therapists, options_for_select(therapists.map {|z,i| [z.name, i]}, 0), :class=>'therapists'%></td>
      </tr>
    </table>
  </div>
</div>

<div class="modal-footer">
  <a href="#step2" class="btn transition" data-toggle="modal">Previous</a>
  <a href="#" class="btn btn-primary submit">Save</a>
  <a href="#" class="btn cancel" data-dismiss="modal" aria-hidden="true">Cancel</a>
</div>
