<%= text_field_tag :transaction_id, transaction.id, :class=> "hidden" %>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3 class="transaction-modal-title">Create a New Transaction</h3>
</div>
<div class="modal-body">
  <div id="step-headers">
    <span class="step1 btn btn-inverse">Step 1: Select the Customer</span>
    <span class="divider"></span>
    <span class="step2 btn disabled">Step 2: Select the Services</span>
    <span class="divider"></span>
    <span class="step3 btn disabled">Step 3: Additional Info</span>
  </div>
  <div class="span3 customer-pool">
    <% if transaction.customer %>
      <%= render :partial => "customer_info", :locals => {:customer => transaction.customer} %>
    <% else %>
      <h5>Customer</h5>
    <% end %>
  </div>
  <div class="span5 customer-list">
    <%= render :partial => "customer_list", :locals => {:customers => customers} %>
  </div>
</div>

<div class="modal-footer">
  <a href="#step2" class="btn btn-primary transition" data-toggle="modal">Next</a>
  <a href="#" class="btn cancel" data-dismiss="modal" aria-hidden="true">Cancel</a>
</div>
