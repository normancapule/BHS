<% if flash[:notification] %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <%= flash[:notification] %>
  </div>
<% end %>

<% if transactions > 0 %>
  <div class="table-headers">
    <span class="label">Transactions for <%= date[:format] %></span>
    <%= text_field_tag :date, "", :class => "date-selector hidden" %>
    <a class="btn btn-small add-dialog"><i class="icon-plus"></i></a>
  </div>
  <table id="transaction-table" class="table table-striped table-bordered table-hover" data-source="<%= transactions_url(format: 'json') %>">
    <thead>
      <th>Customer</th>
      <th>Therapist</th>
      <th>Total Price</th>
      <th>Paid</th>
      <th></th>
    </thead>
    <tbody>
    </tbody>
  </table>
<% else %>
  <span class="label label-important">There are no transactions for <%= date[:format] %>.</span>
  <%= text_field_tag :date, date, :class => "date-selector hidden" %>
  <a class="btn btn-small add-dialog"><i class="icon-plus"></i></a>
<% end %>
